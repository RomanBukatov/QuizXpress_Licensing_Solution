<Window x:Class="KeyGenerator.QX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeyGenerator.QX"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Doka Studio V2 - Генератор ключей" Height="500" Width="600">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Hardware ID -->
        <Label Grid.Row="0" Grid.Column="0" Content="Hardware ID:" Margin="0,10,10,5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="0" Grid.Column="1" Name="HardwareID_TextBox" Margin="0,10,0,5" Padding="5"
                 Height="30" VerticalAlignment="Center"/>

        <!-- Имя клиента -->
        <Label Grid.Row="1" Grid.Column="0" Content="Имя клиента:" Margin="0,5,10,5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" Name="ClientName_TextBox" Margin="0,5,0,5" Padding="5"
                 Height="30" VerticalAlignment="Center"/>

        <!-- Тип лицензии -->
        <Label Grid.Row="2" Grid.Column="0" Content="Тип лицензии:" Margin="0,5,10,5" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="2" Grid.Column="1" Name="LicenseType_ComboBox" Margin="0,5,0,5" Padding="5"
                  Height="30" VerticalAlignment="Center" SelectionChanged="LicenseType_ComboBox_SelectionChanged">
            <ComboBoxItem Content="Вечная"/>
            <ComboBoxItem Content="Триальная"/>
            <ComboBoxItem Content="С датой"/>
        </ComboBox>

        <!-- Дата истечения -->
        <Label Grid.Row="3" Grid.Column="0" Content="Дата истечения:" Margin="0,5,10,5" VerticalAlignment="Center" Visibility="Collapsed" Name="ExpiryDate_Label"/>
        <TextBox Grid.Row="3" Grid.Column="1" Name="ExpiryDate_TextBox" Margin="0,5,0,5" Padding="5"
                    Height="30" VerticalAlignment="Center" Visibility="Collapsed" MaxLength="10"/>

        <!-- Поле для вывода ключа -->
        <Label Grid.Row="4" Grid.Column="0" Content="Сгенерированный ключ:" Margin="0,15,10,5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Name="LicenseKey_TextBox"
                 Margin="0,5,0,15" Padding="10" Height="40" IsReadOnly="True"
                 FontFamily="Courier New" FontSize="12" VerticalContentAlignment="Center"
                 Background="#F5F5F5"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal"
                    HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Name="Generate_Button" Content="Сгенерировать" Width="120" Height="35"
                    Margin="0,0,20,0" Padding="5" FontWeight="Bold" Click="Generate_Button_Click"/>
            <Button Name="CopyKey_Button" Content="Копировать ключ" Width="120" Height="35"
                    Padding="5" FontWeight="Bold" Click="CopyKey_Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
